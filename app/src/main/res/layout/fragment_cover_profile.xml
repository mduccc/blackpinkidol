<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_cover_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    tools:context=".fragment.CoverProfileFragment">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/cover_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shape_roundRect_bottomLeftRadius="15dp"
        app:shape_roundRect_bottomRightRadius="15dp">
    <ImageView
            android:id="@+id/image_cover_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="TODO"
            android:src="@drawable/cover_blackpink_profile"/>
    </com.github.florent37.shapeofview.shapes.RoundRectView>

</RelativeLayout>